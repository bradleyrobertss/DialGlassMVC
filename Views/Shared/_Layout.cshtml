<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>

    <script src="~/Scripts/jquery-3.1.1.min.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
		
    <link rel="stylesheet" type="text/css" href="/Content/default.css" />
    <link rel="stylesheet" type="text/css" href="/Content/bootstrap.min.css" />
</head>
<body>
    <div id="header" class="mainContent">
        <a href="/">
			<div class="heading row">
	            DIAL GLASS
			</div>
	        <div class="subHeading row">
	            24hr Boarding & Glazing Service 365 days a week Located in Kent
			</div>
        </a>
	</div>
		
	<nav class="navbar navbar-inverse">
	  <div class="container-fluid">
	    <!-- Brand and toggle get grouped for better mobile display -->
	    <div class="navbar-header">
	      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#dialGlassMenu" aria-expanded="false">
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </button>
	    </div>

	    <!-- Collect the nav links, forms, and other content for toggling -->
	    <div class="collapse navbar-collapse mainContent" id="dialGlassMenu">
	      <ul class="nav navbar-nav">
			<li class="menuItem"><a href="/">Home</a></li>
	        <li class="menuItem"><a href="#">Glazing</a></li>
	        <li class="menuItem"><a href="#">Glazing Repairs</a></li>
	        <li class="menuItem"><a href="#">Glazing Parts</a></li>
	        <li class="menuItem"><a href="#">Shop Front Repairs</a></li>
	        <li class="menuItem"><a href="#">Glass Merchants</a></li>
	        <li class="menuItem"><a href="@Url.Action("ContactUs", "Contact")">Service Request</a></li>
	      </ul>
	    </div><!-- /.navbar-collapse -->
	  </div><!-- /.container-fluid -->
    </nav>

	<div class="mainContent">
        @RenderBody()
	</div>

    <div id="footer">
        <div class="row footer">
            <p>Unit O<br />Twydall Enterprise Centre<br />256 Lower Twydall Lane<br />Gillingham<br />Kent<br />ME8 6XX</p>
			<p>Phone: 01634 267444</p>

            <a class="designerLink">A Bradley Roberts website</a>
		</div>
    </div>
</body>
</html>